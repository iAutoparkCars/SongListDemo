<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="SportDataBinding">
        <variable
            name="viewModel"
            type="com.mobile.songlist.SportViewModel"/>
        <variable
            name="handler"
            type="com.mobile.songlist.FavImgClickHandler"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sport_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:text="@{viewModel.sportName}"/>

        <ImageButton
            android:id="@+id/img_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:onClick="@{(v) -> handler.OnFavImgClick()}"
            app:imgSrc="@{viewModel.imgSrcId}"/>

    </RelativeLayout>
</layout>